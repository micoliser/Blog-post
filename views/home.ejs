<%- include("partials/header"); -%>

<h1>Home</h1>
<p><%= firstParagraph %></p>

<% posts.forEach((post) => { %>
<h3><%= post.title %></h3>
<p class = "post-time">by <%= post.posterName %> at <%= post.time %></p>
<p><%= post.content.slice(0, 100) + " ..." %><a href="/posts/<%= post._id %>" >Read More</a></p>
<% }); %>

<%- include("partials/footer"); -%>
